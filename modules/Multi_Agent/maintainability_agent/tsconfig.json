{
  "extends": "../../static-analyzer/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    // ✅ Force ESM, overriding parent
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    // ✅ Ensure no CommonJS transform occurs
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
